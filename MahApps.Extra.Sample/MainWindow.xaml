<Metro:MetroWindow x:Class="MahApps.Extra.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mahappsextra="http://metro.mahapps.com/winfx/xaml/extra"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="OnLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <mahappsextra:Accordion>
            <mahappsextra:AccordionItem Header="Test">
                <mahappsextra:AccordionMenu x:Name="lstDide" Items="{Binding FirstMenu}">
                </mahappsextra:AccordionMenu>
            </mahappsextra:AccordionItem>
            <mahappsextra:AccordionItem Header="Test 2">
                <mahappsextra:AccordionMenu x:Name="lstDide2" >
                </mahappsextra:AccordionMenu>
            </mahappsextra:AccordionItem>
        </mahappsextra:Accordion>
    </Grid>
</Metro:MetroWindow>
